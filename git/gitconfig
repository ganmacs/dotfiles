[core]
	excludesfile = $HOME/.gitignore_global
	editor = vim
	pager = less
[color]
	ui = auto
	diff = auto
[push]
	default = tracking
[ghq]
  root = ~/src
[alias]
	co = checkout
	po = push origin
	cm = commit
  st = status
  br = branch
	re = rebase
	u  = remote update
  ft = fetch
	ri = rebase -i
  uncommit = reset HEAD^
  hist = log --graph --stat
  l = log --graph --all --format=format:'%C(bold red)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold blue)â€• %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  ignore = !"f() { local s=$1; shift; while [ $# -gt 0 ]; do s="$s,$1"; shift; done; curl "http://gitignore.io/api/$s"; }; f"
